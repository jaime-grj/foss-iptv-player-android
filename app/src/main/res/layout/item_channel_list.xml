<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="2dp"
    android:padding="4dp">

    <!-- Main Channel Name TextView -->
    <TextView
        android:id="@+id/tvChannelListName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_bold"
        android:paddingHorizontal="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="00  Nombre de canal" />

    <!-- Subtitle TextView for Current Program Name -->
    <TextView
        android:id="@+id/tvChannelListSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChannelListName"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_regular"
        android:paddingHorizontal="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Current Program Name" />

    <!-- Horizontal ProgressBar for Program Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:progressDrawable="@drawable/progress_drawable"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:indeterminate="false"
        android:progress="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChannelListSubtitle"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

