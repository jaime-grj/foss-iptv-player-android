<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/progress_drawable.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer (Unfilled Portion) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#CCCCCC" /> <!-- Light gray for the background -->
        </shape>
    </item>

    <!-- Progress Layer (Filled Portion) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="4dp" />
                <solid android:color="#0B31ED" /> <!-- Orange for the progress bar -->
            </shape>
        </clip>
    </item>
</layer-list>
